{
  "type": "postgres",
  "host": "${DB_HOST}",
  "port": "${DB_PORT}",
  "username": "${POSTGRES_USER}",
  "password": "${POSTGRES_PASSWORD}",
  "database": "${POSTGRES_DB}",
  "entities": ["src/models/*.ts"],
  "migrations": ["src/database/migrations/*.ts"],
  "cli": {
    "migrationsDir": "src/database/migrations"
  }
}
